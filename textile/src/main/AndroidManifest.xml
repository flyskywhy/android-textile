<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.textile.textile">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application android:usesCleartextTraffic="true">
        <service android:name=".LifecycleService" android:exported="false" />
        <service android:name="net.gotev.uploadservice.UploadService" android:exported="false" />

        <receiver android:name=".UploadServiceReceiver" android:exported="false">
            <intent-filter>
                <action android:name="io.textile.textile.uploadservice.broadcast.status" />
            </intent-filter>
        </receiver>
    </application>
</manifest>
